<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <style type="text/css">
            table {
                table-layout: fixed;
                width: 100%;
                border-collapse: collapse;
                border: 3px black;
            }

            th,
            td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            tr:hover {
                background-color: rgb(206, 210, 211);
            }

            th {
                background-color: #04AA6D;
                color: black;
            }
        </style>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">

            <table id="mytable" class="table table-hover">
                <tr>
                    <th>Filename</th>
                    <th>Download</th>
                    <th>Delete</th>
                </tr>
                <% for(var i=1; i < data.length; i=i+2) { %>
                    <tr>
                        <td>
                            <a style="color:black" href="viewfile/filename/<%= data[i] %>">
                                <%= data[i] %>
                            </a>
                        </td>
                        <td>
                            <a href="https://uploadbucket1.s3.amazonaws.com/<%= data[i] %>">Download<i
                                    class="fa fa-download"></i> </a>
                        </td>
                        <td>
                            <a style="color:red" href="deletefile/filename/<%= data[i] %>">Delete<i
                                    class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                    <% } %>
            </table>



        </div>
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
        var table = new Tabulator("#mytable", {
            selectable: true,
        });
    </script>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>